<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Bento UI PWA" parallel="tests" thread-count="1">

<listeners>
<listener class-name="org.uncommons.reportng.HTMLReporter" />
<listener class-name="common.RemoveDuplicateResults"/>
<listener class-name="common.RetryListener"/>
<listener class-name="org.uncommons.reportng.JUnitXMLReporter" />
</listeners>

<test name="PWA ADCB" preserve-order="true">
    <classes>   
      <class name="paymentsUI_Air.PWA_RP_ADCB_Error"/>  
      <class name="paymentsUI_Air.PWA_RP_ADCB_Full"/>  
      <class name="paymentsUI_Air.PWA_RP_ADCB_Partial"/>  
