<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Payment New UI Only" parallel="tests" thread-count="10">

<listeners>
<listener class-name="org.uncommons.reportng.HTMLReporter" />
<listener class-name="common.RemoveDuplicateResults"/>
<listener class-name="common.RetryListener"/>
<listener class-name="org.uncommons.reportng.JUnitXMLReporter" />
</listeners>

	
<test name="Payment UI Pay"  preserve-order="true" parallel="true" >
    <classes>
      <class name="paymentsUI.PaymentUI_Captcha"/> 
      <class name="paymentsUI.PaymentUI_SignIN"/>
      <class name="paymentsUI.PaymentUI_Validation"/>
	  <class name="paymentsUI.PaymentsUI_NB"/>
	  <class name="paymentsUI.PaymentUI_Wallet"/>
	  <class name="paymentsUI.PaymentUI_PhonePe"/> 
	  <class name="paymentsUI.PaymentUI_TPW_AmazonPay"/>
	  
    </classes>
</test>


<test name="Payment UI Validation"  preserve-order="true" parallel="true" >
    <classes>
      <class name="paymentsUI.PaymentUI_AddStoredCardAndValidate"/>
      <class name="paymentsUI.PaymentUI_ErrorValidationUPIWalletAndNB"/>
      <class name="paymentsUI.PaymentUI_SuccessfulPaymentMessage"/> 
      <class name="paymentsUI.PaymentUI_Progress"/> 
    
    </classes>
</test>


<test name="Payment UI PWA"  preserve-order="true" parallel="true" >
    <classes>
      <class name="paymentsUI.Payment_UI_PWA_CC"/>
      <class name="paymentsUI.Payment_UI_PWA_NB"/>
      <class name="paymentsUI.Payment_UI_PWA_TPW_AmazonPay"/> 
      <class name="paymentsUI.Payment_UI_PWA_UPI"/> 
    
    </classes>
</test>

</suite> 