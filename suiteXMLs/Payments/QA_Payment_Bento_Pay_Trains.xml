<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Bento UI Train" parallel="tests" thread-count="2">

<listeners>
<listener class-name="org.uncommons.reportng.HTMLReporter" />
<listener class-name="common.RemoveDuplicateResults"/>
<listener class-name="common.RetryListener"/>
<listener class-name="org.uncommons.reportng.JUnitXMLReporter" />
</listeners>

<test name="Train Pay" preserve-order="true">
    <classes>
      <class name="paymentsUI.PaymentUI_Captcha"/> 
      <class name="paymentsUI.PaymentUI_SignIN"/>
	  <class name="paymentsUI.PaymentUI_TPW_AmazonPay"/>	  
	  <class name="paymentsUI.PaymentsUI_NB"/>	  
    </classes>
</test>
	
<test name="Train Validation" preserve-order="true"  >
    <classes>
      <class name="paymentsUI.PaymentUI_ErrorValidationUPIWalletAndNB"/>
      <class name="paymentsUI.PaymentUI_SuccessfulPaymentMessage"/> 
      <class name="paymentsUI.PaymentUI_Progress"/> 
   </classes>
</test>

</suite> 