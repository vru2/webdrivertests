<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Bento UI Train" parallel="tests" thread-count="2">

<listeners>
<listener class-name="org.uncommons.reportng.HTMLReporter" />
<listener class-name="test.java.common.RemoveDuplicateResults"/>
<listener class-name="test.java.common.RetryListener"/>
<listener class-name="org.uncommons.reportng.JUnitXMLReporter" />
</listeners>

<test name="Train Pay" preserve-order="true">
    <classes>
      <class name="test.java.paymentsUI.PaymentUI_Captcha"/>
      <class name="test.java.paymentsUI.PaymentUI_SignIN"/>
	  <class name="test.java.paymentsUI.PaymentUI_TPW_AmazonPay"/>
	  <class name="test.java.paymentsUI.PaymentsUI_NB"/>
    </classes>
</test>
	
<test name="Train Validation" preserve-order="true"  >
    <classes>
      <class name="test.java.paymentsUI.PaymentUI_ErrorValidationUPIWalletAndNB"/>
      <class name="test.java.paymentsUI.PaymentUI_SuccessfulPaymentMessage"/>
      <class name="test.java.paymentsUI.PaymentUI_Progress"/>
   </classes>
</test>

</suite> 