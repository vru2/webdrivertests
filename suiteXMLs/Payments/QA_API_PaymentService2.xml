<listener class-name="common.RemoveDuplicateResults"/>
<listener class-name="common.RetryListener"/>
<listener class-name="org.uncommons.reportng.JUnitXMLReporter" />
</listeners>



<test name="API Pay Calls" preserve-order="true" parallel="true">
    <classes>
      <class name="paymentsAPI.API_Validate"/>
      <class name="paymentsAPI.API_CC_Visa_Type"/>
      <class name="paymentsAPI.API_CC_GV_Wallet"/> 
      <class name="paymentsAPI.API_CC"/>
      <class name="paymentsAPI.API_GV"/> 
      <class name="paymentsAPI.API_Wallet"/>
      <class name="paymentsAPI.API_GV_WL"/> 
    </classes>
