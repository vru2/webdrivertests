<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="MobileWeb" parallel="tests" thread-count="4" preserve-order="true">

<listeners>
		<listener class-name="org.uncommons.reportng.HTMLReporter" />
		<listener class-name="commonServices.RemoveDuplicateResults"/>
		<listener class-name="commonServices.RetryListener"/>
</listeners>


<test name="AE" preserve-order="true"  parallel="true">
   	<classes>
   	 <class name="com.cleartrip.hotel.pwa.AE_Dom"/>      	
	 <class name="com.cleartrip.hotel.pwa.AE_Intl"/>        		  
    </classes>
</test>

<test name="Com" preserve-order="true"  parallel="true">
