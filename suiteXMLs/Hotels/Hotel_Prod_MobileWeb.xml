   	   <class name="com.cleartrip.hotel.pwa.Intl_Prod"/> 
    </classes>
</test>

<test name="ME" preserve-order="true"  parallel="true">
   	<classes> 
   	 <class name="com.cleartrip.hotel.pwa.BH_Dom"/>         	
   	 <class name="com.cleartrip.hotel.pwa.KW_Dom"/>        	
   	 <class name="com.cleartrip.hotel.pwa.ME_Dom"/>  	
   	 <class name="com.cleartrip.hotel.pwa.QA_Dom"/>      
   	 <class name="com.cleartrip.hotel.pwa.SA_Dom"/>       	
